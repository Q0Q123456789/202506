{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/auto-imports.d.ts", // 确保包含自动导入文件  
    "src/components.d.ts"    // 如果有组件自动导入
  ]
}